<%= stylesheet_link_tag "formulario.css" %>
<%= form_with(model: evaluacionaviso, local: true) do |form| %>
<%a = DateTime.now%>
<div class="bg-light">
  <br>
<div class="container " style="margin-top: 1em;">
    <!-- Sign up form -->


    <form>
        <!-- Sign up card -->
        <div class="card person-card">
            <div class="card-body">
                <!-- Sex image -->
                <img id="img_sex" class="person-img"
                    src="https://visualpharm.com/assets/217/Life%20Cycle-595b40b75ba036ed117d9ef0.svg">
                <h2 id="who_message" class="card-title">Encuesta sobre tu aviso</h2>

                <!-- First row (on medium screen) -->

            </div>
        </div>

        <div class="row">
            <div class="col-md-6" style="padding=0.5em;">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title">Sobre tu aviso</h2>
                        <div class="form-group">
                            <label for="email" class="col-form-label">¿Encontraste lo que buscabas en la publicación <%= @evaluacionaviso.a%>?</label>
                            <select id="inputState" style="width:500px" class="form-control"   <%= form.text_field :i, id: :evaluacionaviso_i %>>

                            <option>Si</option>
                            <option>No</option>
                          </select>
                            </div>


                        <div class="form-group">
                          <label for="email" class="col-form-label">¿Como ubicaste a la persona que contacto?</label>
                          <select id="inputState" style="width:500px" class="form-control"   <%= form.text_field :j, id: :evaluacionaviso_j%>>

                          <option>Número Telefónico</option>
                          <option>Email</option>
                          <option>No me contacto</option>
                        </select>
                    </div>

                </div>
            </div>
              </div>

            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title">Sobre el servicio</h2>
                        <div class="form-group">
                          <label for="email" class="col-form-label">¿Con que nota evaluas este servicio ?</label>
                          <select id="inputState" style="width:500px" class="form-control"   <%= form.number_field :k, id: :evaluacionaviso_k %>>
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                            <option>5</option>
                            <option>6</option>
                            <option>7</option>
                        </select>
                    </div>



                    </div>
                </div>
            </div>
        </div>
        <br><br>
        <div class="text-center" style="margin-top: 1em;">

             <%= form.submit "Enviar Formulario",class: "btn btn-primary" %>
             <br>
        </div>


        <br><br>
        </form>
        <%end%>
</div></div>
