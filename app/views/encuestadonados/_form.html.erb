<%= stylesheet_link_tag "formulario.css" %>
<%if current_user%>


<%a = DateTime.now%>
<div class="bg-light">
  <br>
<div class="container " style="margin-top: 1em;">
    <!-- Sign up form -->
<%= form_with(model: encuestadonado, local: true) do |form| %>
  <%if current_user.id == encuestadonado.iddon%>
  <%if encuestadonado.horapedido.to_i > a.to_i%>
    <form>
        <!-- Sign up card -->
        <div class="card person-card">
            <div class="card-body">
                <!-- Sex image -->
                <img id="img_sex" class="person-img"
                    src="https://visualpharm.com/assets/217/Life%20Cycle-595b40b75ba036ed117d9ef0.svg">
                <h2 id="who_message" class="card-title">Encuesta sobre solicitante</h2>

                <!-- First row (on medium screen) -->

            </div>
        </div>

        <div class="row">
            <div class="col-md-6" style="padding=0.5em;">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title">Sobre el Solicitante</h2>
                        <div class="form-group">
                            <label for="email" class="col-form-label">¿Con que nota evaluas al Solicitante <%=encuestadonado.nombresol%> ?</label>
                            <select id="inputState" class="form-control"  <%= form.number_field :notadon, id: :encuestadonado_notadon %>>

                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                            <option>5</option>
                            <option>6</option>
                            <option>7</option>

                          </select>
                            </div>


                        <div class="form-group">
                          <label for="email" class="col-form-label">¿Como ubicaste Solicitante <%=encuestadonado.nombresol%>  por primera vez?</label>
                          <select id="inputState" style="width:500px" class="form-control"   <%= form.text_field :res, id: :encuestadonado_res %>>

                          <option>Número Telefónico</option>
                          <option>Email</option>
                        </select>
                    </div>
                    <div class="form-group">
                      <label for="email" class="col-form-label">¿El producto <%= encuestadonado.nompro%> fue entregado al Solicitante <%=encuestadonado.nombresol%> ?</label>
                      <select id="inputState" style="width:500px" class="form-control"                   <%= form.text_field :estadopro, id: :encuestadonado_estadopro %>>

                      <option>Entregado</option>
                      <option>No Entregado</option>
                    </select>
                </div>
                </div>
            </div>
              </div>

            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title">Sobre el Producto</h2>
                        <div class="form-group">
                          <label for="email" class="col-form-label">¿Con que nota evaluas evaluas al solicitante <%=encuestadonado.nombresol%> ?</label>
                          <select id="inputState" style="width:500px" class="form-control"   <%= form.number_field :notapro, id: :encuestadonado_notapro %>>
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                            <option>5</option>
                            <option>6</option>
                            <option>7</option>
                        </select>
                    </div>

                    <div class="form-group">
                      <label for="email" class="col-form-label">¿En que estado se encontraba el producto <%=encuestadonado.nompro%>  que entregaste al solicitante <%=encuestadonado.nombresol%> ?</label>
                      <select id="inputState" style="width:500px" class="form-control"   <%= form.text_field :real, id: :encuestadonado_real %>>

                      <option>Comó lo indicaba la publicación</option>
                      <option>En un estado peor comentado en la publicación</option>
                    </select>
                </div>

                    </div>
                </div>
            </div>
        </div>
        <br><br>
        <div class="text-center" style="margin-top: 1em;">

             <%= form.submit "Enviar Formulario",class: "btn btn-primary" %>
             <br>
        </div>


        <br><br>
        </form>
        <%else%>
        <script>
            alert("Aun no se libera Encuesta");
            window.location.href="/publicaciones/solicitados"
        </script>

        <%end%>
        <%else%>
        <script>
            alert("Acceso denegado");
            window.location.href="/"
        </script>

        <%end%>
        <%end%>
</div></div>

<%else%>
<script>
    alert("No ha iniciado sesión");
    window.location.href="/"
</script>
<%end%>
