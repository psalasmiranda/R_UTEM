<%= stylesheet_link_tag "productoslist.css" %>

<section class="bg-light">
<div class="container">
  <br><br>
  <%if !current_user%>
  <div class="alert alert-warning">
<strong>Alerta: </strong> No podrá Solicitar Producto hasta que usted inicie Sesión.
</div><%end%>
    <div class="row">
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                    <div class="col-md-12">
                      <ul class="list-group category_block">
                        <li class="list-group-item"><%= link_to "Todos los productos", productos_path%></li>
                          <li class="list-group-item"><%= link_to "Accesorios para Vehiculos", vehiculo_path%></li>
                          <li class="list-group-item"><%= link_to "Arte y Antigüedades", arte_path%></li>
                          <li class="list-group-item"><%= link_to "Jardín", jardin_path%></li>
                          <li class="list-group-item"><%= link_to "Infantil", bebe_path%></li>
                          <li class="list-group-item"><%= link_to "Deporte y Fitness", deporte_path%></li>
                          <li class="list-group-item"><%= link_to "Electronica y Electrodomesticos", hogar_path%></li>
                          <li class="list-group-item"><%= link_to "Herramientas", herramienta_path%></li>
                          <li class="list-group-item"><%= link_to "Libros", libro_path%></li>
                          <li class="list-group-item"><%= link_to "Vestuario", vestuario_path%></li>
                          <li class="list-group-item"><%= link_to "Material de estudio", material_path%></li>
                          <li class="list-group-item"><%= link_to "Muebles", mueble_path%></li>
                          <li class="list-group-item"><%= link_to "Oficina", oficina_path%></li>
                          <li class="list-group-item"><%= link_to "Otros", otros_path%></li>
                      </ul>
                    </div>
                </div>
                    <hr>
                </div>
            </div><br><br>
        </div>
        <div class="col-md-9">
            <div class="card bg-light">
                <div class="card-body">
                    <div class="row ">
                    <div class="col-md-12">


                            <form action="#" class="pull-right position">
                              <%= form_tag(users_index_path) do %>
                              <%= text_field_tag :term %>
                              <%= submit_tag 'Buscar Producto' %>
                              <% end %>
                            </form>

                    </div>
                </div>

                    <div class="divider"></div>

                    <div class="row mt-3 mb-4">
    <% @productos.each do |producto| %>
    <%a=1%>
    <%b=2%>
    <%c=3%>
    <%var= producto.id %>
    <%po= var + 3%>
    <%if po == a %>
		  <div class="col-md-4">

		</div>
    <%end%>
    <%if po == b%>
		<div class="col-md-4">

		</div>
    <%end%>

        <% if current_user && current_user.id != producto.user_id%>
    		<div class="col-md-4">
    		    <div class="product border">
              <%if producto.imagen? %>
              <div class="product-image">
                  <img src="<%= producto.imagen %>" width="235" height="235">
              </div>
              <%else%>
              <div class="product-image">
                  <%= image_tag "sinfoto.jpg", size: "235x240"%>


              </div>

              <%end%>

    		        <div class="product-block">
    		            <h5><%=producto.titulo%></h5>
    		            <h5 class="text-danger"><%= producto.horaaprobacion.strftime("%d/%m/%Y")%></h5>
    		            <ul class="list-inline ">
                        <li class="list-inline-item"><i class="fa fa-clock-o"></i>

                            <%= producto.horaaprobacion.strftime("%H:%M:%S")%></li>
                        <li class="list-inline-item"> <div class="badge badge-success float-right">   <%=producto.estado%></div></li>
                        <li class="list-inline-item"><i class="fa fa-list"></i> <%= producto.categoria%></li>
                    </ul>
    		        </div>
    		        <div class="product-footer">
    		            <div class="row">
    		                <div class="col-md-6">
    		                  <%= link_to "Ver Producto", producto , class: "btn btn-primary"%>
    		                </div>

    		            </div>
    		        </div>
    		    </div>
    		</div>
        <%else%>
        <div class="col-md-4">
    		    <div class="product border">
              <%if producto.imagen? %>
              <div class="product-image">
                  <image src="<%= producto.imagen %>" width="235" height="235">
              </div>
              <%else%>
              <div class="product-image">
                <%= image_tag "sinfoto.jpg", size: "235x240"%>
              </div>

              <%end%>
    		        <div class="product-block">
    		            <h5><%=producto.titulo%></h5>
    		            <h5 class="text-danger"><%= producto.horaaprobacion.strftime("%d/%m/%Y")%></h5>
    		            <ul class="list-inline ">
                        <li class="list-inline-item"><i class="fa fa-clock-o"></i>
                            <%= producto.horaaprobacion.strftime("%H:%M:%S")%></li>
                        <li class="list-inline-item"> <div class="badge badge-success float-right">   <%=producto.estado%></div></li>
                        <li class="list-inline-item"><i class="fa fa-list"></i> <%= producto.categoria%></li>
                    </ul>
    		        </div>
    		        <div class="product-footer">
    		            <div class="row">
    		                <div class="col-md-6">
    		                  <%= link_to "Ver Producto", producto , class: "btn btn-primary"%>
    		                </div>

    		            </div>
    		        </div>
    		    </div>
    		</div>
        <%end%>
        <%end%>


    	</div>
    </div>
      <%= paginate @productos %>

    </section>
